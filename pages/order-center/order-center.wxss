/* pages/order-center/order-center.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.bg {
  width: 100%;
}

.main {
  position: absolute;
  top: 15%;
  left: 0;
  text-align: center;
  font-size: 36rpx;
  display: flex;
  height: 70%;
  width: 100%;
  flex-direction: column;
  justify-content: space-around;
}

.icon {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 0 auto;
}
