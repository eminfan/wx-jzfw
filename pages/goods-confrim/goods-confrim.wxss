/* pages/good-confrim/good-confrim.wxss */

.choose {
  display: flex;
  padding: 40rpx 20rpx;
  border: 2px dashed #ccc;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  /* color: #a8a8a8; */
}

.choose .icon {
  flex: 0 0 40rpx;
  width: 40rpx;
  height: 48rpx;
}

.choose .icon.arrow {
  flex: 0 0 25rpx;
  width: 25rpx;
}

.address {
  flex: 1;
  /* padding: 40rpx 20rpx; *//* border-bottom: 1px solid #eee; */
  color: #8a8a8a;
  margin-left: 20rpx;
}

.address .name {
  margin-right: 40rpx;
}

.address .info {
  font-size: 24rpx;
}

.text-bold {
  margin-bottom: 10rpx;
  color: #333;
  font-weight: 600;
  font-size: 28rpx;
}

.list {
  display: flex;
  flex-wrap: wrap;
  flex: 1 1 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-image {
  width: 100%;
  height: 250rpx;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  width: 100%;
}

.item .img {
  flex: 0 0 150rpx;
  width: 150rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
}

.item .name {
  font-size: 28rpx;
  font-weight: 500;
}

.item .price {
  display: flex;
  justify-content: space-between;
}

.item .num {
}

.desc {
  color: #a8a8a8;
}

.text-red {
  font-size: 28rpx;
  color: #f7504a;
}

.coupon {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx 20rpx;
  line-height: 1;
  margin-bottom: 20rpx;
}

.coupon .icon {
  width: 18rpx;
  height: 30rpx;
  vertical-align: bottom;
  margin-left: 15rpx;
}

.coupon .picker {
  display: inline-block;
}

.money-wrap {
  background-color: #fff;
  padding: 15rpx 0;
}

.money-wrap .row {
  display: flex;
  justify-content: space-between;
  line-height: 1;
  padding: 15rpx 20rpx;
}

.color-red {
  color: #f7504a;
}

.pay-wrap {
  display: flex;
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  line-height: 100rpx;
}

.pay-wrap .left {
  flex: 1;
  padding: 0 20rpx;
  text-align: right;
}

.pay-wrap .right {
  flex: 0 0 240rpx;
  height: 100rpx;
  text-align: center;
  /* color: #fff;
  background-color: #f7504a; */
}
.pay-wrap .right button{
  width: 100%;
  height: 100%;
  border: none;
  color: #fff;
  background-color: #f7504a;
  border-radius: 0;
}

.pay-wrap text {
  vertical-align: middle;
}

.pay-wrap .totle {
  color: #f7504a;
}
